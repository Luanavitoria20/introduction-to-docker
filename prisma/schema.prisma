generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Genero {
  ACAO
  COMEDIA
  DRAMA
  TERROR
  FICCAO
  AVENTURA
}

model Filme {
  id     Int     @id @default(autoincrement())
  titulo String
  genero Genero
  ano    Int
}

model User{
  id String @id @default(uuid()) //Int @id @default(autoincrement())=String(uuid()) npx prisma migrate dev --name change id
  name String
  email String @unique
  password String?
  googleId String? @unique
  role UserRole @default(COMUM)
} 

enum UserRole{
  ADMIN
  COMUM
} 